    // Am√©liorer l'exp√©rience du s√©lecteur d'expiration
    document.addEventListener('DOMContentLoaded', function() {
      const expirationSelect = document.getElementById('expiration');
      const selectWrapper = expirationSelect.parentElement;
      
      // Ajouter une classe active quand le select est focus
      expirationSelect.addEventListener('focus', function() {
        selectWrapper.classList.add('active');
      });
      
      expirationSelect.addEventListener('blur', function() {
        selectWrapper.classList.remove('active');
      });
      
      // Animation lors du changement de valeur
      expirationSelect.addEventListener('change', function() {
        selectWrapper.style.transform = 'scale(1.02)';
        setTimeout(() => {
          selectWrapper.style.transform = 'scale(1)';
        }, 150);
      });
    });
    
    // FAQ interactive
    document.addEventListener('DOMContentLoaded', function() {
      const faqItems = document.querySelectorAll('.faq-item');
      
      faqItems.forEach(item => {
        const question = item.querySelector('.faq-question');
        const toggle = item.querySelector('.faq-toggle');
        
        question.addEventListener('click', function() {
          const isActive = item.classList.contains('active');
          
          // Fermer tous les autres items
          faqItems.forEach(otherItem => {
            if (otherItem !== item) {
              otherItem.classList.remove('active');
            }
          });
          
          // Toggle l'item actuel
          if (isActive) {
            item.classList.remove('active');
          } else {
            item.classList.add('active');
          }
        });
      });
    });
