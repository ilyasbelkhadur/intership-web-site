    transform: translateY(0);
  }
  
  .dropdown-header {
    padding: 16px;
    border-bottom: 1px solid rgba(244, 158, 18, 0.1);
  }
  
  .dropdown-user-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .dropdown-avatar {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #f49e12, #e6890e);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
