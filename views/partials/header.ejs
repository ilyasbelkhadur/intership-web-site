<header class="site-header" id="siteHeader">
  <div class="header-content">
    <!-- Logo et titre principal -->
    <div class="header-left">
      <div class="logo-container">
        <img src="/logo_corporate.png" alt="PEGASE Expert" class="logo-image" />
      </div>
    </div>
    
    <!-- Navigation principale -->
    <nav class="header-nav">
      <% if (typeof user !== 'undefined' && user) { %>
        <!-- Menu utilisateur -->
        <div class="user-menu">
          <div class="user-info" id="userDropdown">
            <div class="user-avatar">
              <img src="/personne.png" alt="Utilisateur" class="user-avatar-img" />
            </div>
            <div class="user-details">
              <span class="username"><%= user.username %></span>
              <span class="user-role">Administrateur</span>
            </div>
            <span class="material-symbols-rounded dropdown-arrow">expand_more</span>
          </div>
          
          <!-- Menu déroulant utilisateur -->
          <div class="user-dropdown" id="userDropdownMenu">
            <div class="dropdown-header">
              <div class="dropdown-user-info">
                <div class="dropdown-avatar">
                  <img src="/personne.png" alt="Utilisateur" class="dropdown-avatar-img" />
                </div>
                <div class="dropdown-details">
                  <span class="dropdown-username"><%= user.username %></span>
                  <span class="dropdown-email"><%= user.email %></span>
                </div>
              </div>
            </div>
            <div class="dropdown-divider"></div>
            <a href="/dashboard" class="dropdown-item">
              <span class="material-symbols-rounded">dashboard</span>
              <span>Dashboard</span>
            </a>
            <a href="/index" class="dropdown-item">
              <span class="material-symbols-rounded">add_circle</span>
              <span>Nouveau Secret</span>
            </a>

            <div class="dropdown-divider"></div>
            <a href="/logout" class="dropdown-item logout-item">
              <span class="material-symbols-rounded">logout</span>
              <span>Déconnexion</span>
            </a>
          </div>
        </div>
      <% } else { %>
        <!-- Navigation pour utilisateur non connecté -->
        <div class="guest-nav">
          <!-- Bouton de connexion supprimé -->
        </div>
      <% } %>
    </nav>
    
    <!-- Menu mobile -->
    <div class="mobile-menu-toggle" id="mobileToggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  
  <!-- Menu mobile -->
  <div class="mobile-menu" id="mobileMenu">
    <% if (typeof user !== 'undefined' && user) { %>
      <a href="/dashboard" class="mobile-nav-link">
        <span class="material-symbols-rounded">dashboard</span>
        <span>Dashboard</span>
      </a>
      <a href="/index" class="mobile-nav-link">
        <span class="material-symbols-rounded">add_circle</span>
        <span>Nouveau Secret</span>
      </a>
      <div class="mobile-user-info">
        <div class="mobile-user-avatar">
          <span class="material-symbols-rounded">admin_panel_settings</span>
        </div>
        <div class="mobile-user-details">
          <span class="mobile-username"><%= user.username %></span>
          <span class="mobile-user-role">Administrateur</span>
        </div>
      </div>
      <a href="/logout" class="mobile-nav-link logout">
        <span class="material-symbols-rounded">logout</span>
        <span>Déconnexion</span>
      </a>
    <% } else { %>
      <!-- Bouton de connexion mobile supprimé -->
    <% } %>
  </div>
</header>
<style>
  .site-header {
    position: fixed;
    top: 0; left: 0; right: 0;
    width: 100%;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(15px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border-bottom: 1px solid rgba(244, 158, 18, 0.2);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateY(0);
  }
  
  /* Animation pour cacher le header */
  .site-header.header-hidden {
    transform: translateY(-100%);
    box-shadow: none;
  }
  
  /* Animation pour montrer le header */
  .site-header.header-visible {
    transform: translateY(0);
  }
  
  /* Transition fluide pour les changements d'état */
  .site-header.header-transitioning {
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                box-shadow 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    transition: padding 0.3s ease;
  }
  
  /* Logo et titre */
  
  .logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6px 10px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .logo-container:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }
  
