        }
        
        .action-card:hover::before {
            transform: scaleX(1);
        }
        
        .action-card h3 {
            color: #333;
            margin-bottom: 15px;
            font-size: 1.2em;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .action-card p {
            color: #666;
            margin-bottom: 20px;
            line-height: 1.5;
        }
        
        .btn {
            display: inline-block;
            padding: 12px 24px;
            background: linear-gradient(135deg, #f49e12, #e6890e);
            color: white;
            text-decoration: none;
            border-radius: 25px;
            transition: all 0.3s ease;
