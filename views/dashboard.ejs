<body>
    <%- include('partials/header') %>
    
    <div class="container">
        <div class="dashboard-container">
            <div class="dashboard-header">
                <h1><span class="material-symbols-rounded">dashboard</span> Bienvenue, <%= user.username %> !</h1>
                <p>Gérez vos secrets et votre compte depuis votre tableau de bord avancé</p>
            </div>
            
            <!-- Métriques principales -->
            <% if (typeof stats !== 'undefined' && stats) { %>
                <div class="metrics-grid fade-in">
                    <div class="metric-card total slide-in-left">
                        <div class="metric-icon">
                            <span class="material-symbols-rounded">key</span>
                        </div>
                        <div class="metric-value"><%= stats.total_passwords || 0 %></div>
                        <div class="metric-label">Total des mots de passe</div>
                    </div>
                    <div class="metric-card active slide-in-left">
                        <div class="metric-icon">
                            <span class="material-symbols-rounded">check_circle</span>
                        </div>
                        <div class="metric-value"><%= stats.active_passwords || 0 %></div>
                        <div class="metric-label">Actifs</div>
                    </div>
                    <div class="metric-card used slide-in-right">
                        <div class="metric-icon">
                            <span class="material-symbols-rounded">visibility</span>
                        </div>
                        <div class="metric-value"><%= stats.used_passwords || 0 %></div>
                        <div class="metric-label">Utilisés</div>
                    </div>
                    <div class="metric-card expired slide-in-right">
                        <div class="metric-icon">
                            <span class="material-symbols-rounded">schedule</span>
                        </div>
                        <div class="metric-value"><%= stats.expired_passwords || 0 %></div>
                        <div class="metric-label">Expirés</div>
                    </div>
                </div>
            <% } %>
            
            <!-- Graphiques -->
            <% if (typeof stats !== 'undefined' && stats) { %>
                <div class="charts-section fade-in">
                    <div class="chart-container slide-in-left">
                        <div class="chart-title">
                            <span class="material-symbols-rounded">pie_chart</span> Répartition des mots de passe
                        </div>
                        <canvas id="statusChart" class="chart-canvas"></canvas>
                    </div>
                    <div class="chart-container slide-in-right">
                        <div class="chart-title">
                            <span class="material-symbols-rounded">show_chart</span> Activité récente
                        </div>
                        <canvas id="activityChart" class="chart-canvas"></canvas>
                    </div>
                </div>
            <% } %>
            
            <!-- Profil utilisateur -->
            <div class="user-profile-section">
                <h3><span class="material-symbols-rounded">account_circle</span> Informations du compte</h3>
                <div class="profile-grid">
                    <div class="profile-item">
                        <div class="profile-label">
                            <span class="material-symbols-rounded">person</span> Nom d'utilisateur
                        </div>
                        <div class="profile-value"><%= user.username %></div>
                    </div>
                    <div class="profile-item">
                        <div class="profile-label">
                            <span class="material-symbols-rounded">mail</span> Email
                        </div>
                        <div class="profile-value"><%= user.email %></div>
                    </div>
                    <div class="profile-item">
                        <div class="profile-label">
                            <span class="material-symbols-rounded">event_available</span> Membre depuis
                        </div>
                        <div class="profile-value"><%= new Date(user.created_at).toLocaleDateString('fr-FR') %></div>
                    </div>
                    <div class="profile-item">
                        <div class="profile-label">
                            <span class="material-symbols-rounded">login</span> Dernière connexion
                        </div>
                        <div class="profile-value">
                            <% if (user.last_login) { %>
                                <%= new Date(user.last_login).toLocaleString('fr-FR') %>
                            <% } else { %>
                                Première connexion
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Timeline des activités -->
            <% if (typeof passwords !== 'undefined' && passwords && passwords.length > 0) { %>
                <div class="timeline-section">
                    <div class="timeline-title">
                        <span class="material-symbols-rounded">history</span> Activité récente
                    </div>
                    <% passwords.slice(0, 5).forEach(password => { %>
                        <div class="timeline-item">
                            <div class="timeline-icon <%= password.status %>">
                                <% if (password.status === 'active') { %>
                                    <span class="material-symbols-rounded" style="color:#28a745">key</span>
                                <% } else if (password.status === 'used') { %>
                                    <span class="material-symbols-rounded">visibility</span>
                                <% } else { %>
                                    <span class="material-symbols-rounded">schedule</span>
                                <% } %>
                            </div>
                            <div class="timeline-content">
                                <div class="timeline-text">
                                    <% if (password.status === 'active') { %>
                                        Mot de passe créé pour <%= password.recipient_email %>
                                    <% } else if (password.status === 'used') { %>
                                        Mot de passe utilisé par <%= password.recipient_email %>
                                    <% } else { %>
                                        Mot de passe expiré pour <%= password.recipient_email %>
                                    <% } %>
                                </div>
                                <div class="timeline-time">
                                    <%= new Date(password.created_at).toLocaleString('fr-FR') %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
            
            
            <!-- Actions rapides -->
            <div class="actions-section">
                <h3><span class="material-symbols-rounded">bolt</span> Actions rapides</h3>
                <div class="actions-grid">
                    <div class="action-card">
                        <h3><span class="material-symbols-rounded">add_circle</span> Créer un secret</h3>
                        <p>Créez un nouveau secret temporaire et partagez-le en toute sécurité avec vos contacts.</p>
                        <a href="/index" class="btn">Créer un secret</a>
                    </div>
                    
                    <div class="action-card">
                        <h3><span class="material-symbols-rounded">manage_accounts</span> Mon profil</h3>
                        <p>Modifiez vos informations personnelles et gérez les paramètres de votre compte.</p>
                        <a href="/profile" class="btn btn-secondary">Modifier le profil</a>
                    </div>
                    
                    <div class="action-card">
                        <h3><span class="material-symbols-rounded">logout</span> Se déconnecter</h3>
                        <p>Fermez votre session en toute sécurité et protégez vos données.</p>
                        <a href="/logout" class="btn btn-secondary">Se déconnecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scripts pour les graphiques -->
    <script>
        // Données pour les graphiques
        <% if (typeof stats !== 'undefined' && stats) { %>
            const statsData = {
                total: <%= stats.total_passwords || 0 %>,
                active: <%= stats.active_passwords || 0 %>,
                used: <%= stats.used_passwords || 0 %>,
                expired: <%= stats.expired_passwords || 0 %>
            };
            
            // Graphique en secteurs (Pie Chart)
            const statusCtx = document.getElementById('statusChart');
            if (statusCtx) {
                new Chart(statusCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Actifs', 'Utilisés', 'Expirés'],
                        datasets: [{
                            data: [statsData.active, statsData.used, statsData.expired],
                            backgroundColor: [
                                '#f49e12',
                                '#e6890e',
                                '#d97706'
                            ],
                            borderWidth: 0,
                            hoverOffset: 10,
                            hoverBackgroundColor: [
                                '#f59e0b',
                                '#d97706',
                                '#b45309'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 20,
                                    usePointStyle: true
                                }
                            }
                        },
                        animation: {
                            animateRotate: true,
                            duration: 2000
                        }
                    }
                });
            }
            
            // Graphique linéaire d'activité (simulation de données)
            const activityCtx = document.getElementById('activityChart');
            if (activityCtx) {
                // Générer des données simulées pour les 7 derniers jours
                const last7Days = [];
                const activityData = [];
                const today = new Date();
                
                for (let i = 6; i >= 0; i--) {
                    const date = new Date(today);
                    date.setDate(date.getDate() - i);
                    last7Days.push(date.toLocaleDateString('fr-FR', { weekday: 'short' }));
                    
                    // Simulation d'activité (remplacer par de vraies données)
                    activityData.push(Math.floor(Math.random() * 10) + 1);
                }
                
                new Chart(activityCtx, {
                    type: 'line',
                    data: {
                        labels: last7Days,
                        datasets: [{
                            label: 'Mots de passe créés',
                            data: activityData,
                            borderColor: '#f49e12',
                            backgroundColor: 'rgba(244, 158, 18, 0.15)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            pointBackgroundColor: '#f49e12',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointRadius: 6,
                            pointHoverRadius: 8,
                            hoverBackgroundColor: '#e6890e',
                            hoverBorderColor: '#d97706'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0,0,0,0.1)'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        animation: {
                            duration: 2000,
                            easing: 'easeInOutQuart'
                        }
                    }
                });
            }
        <% } %>
        
        // Animation des cartes métriques
        document.addEventListener('DOMContentLoaded', function() {
            const metricCards = document.querySelectorAll('.metric-card');
            metricCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.6s ease';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 150);
            });
        });
        
        // Effet de parallaxe sur le header
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const header = document.querySelector('.dashboard-header');
            if (header) {
                header.style.transform = `translateY(${scrolled * 0.1}px)`;
            }
        });
    </script>
